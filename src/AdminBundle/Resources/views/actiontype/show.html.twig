{% extends 'base.html.twig' %}

{% block body %}
    <h1>ActionType</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actionType.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actionType.name }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ actionType.class }}</td>
            </tr>
            <tr>
                <th>Params</th>
                <td>{{ actionType.params }}</td>
            </tr>
            <tr>
                <th>Moduleid</th>
                <td>{{ actionType.moduleId }}</td>
            </tr>
            <tr>
                <th>Sort</th>
                <td>{{ actionType.sort }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actiontype_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('actiontype_edit', { 'id': actionType.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
