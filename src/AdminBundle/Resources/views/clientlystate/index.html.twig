{% extends 'base.html.twig' %}

{% block body %}
    <h1>ClientlyState list</h1>

    <table>
        <thead>
            <tr>
                <th>Stateid</th>
                <th>Statename</th>
                <th>Stateslug</th>
                <th>Stateminislug</th>
                <th>Statetsynced</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clientlyState in clientlyStates %}
            <tr>
                <td><a href="{{ path('clientlystate_show', { 'id': clientlyState.stateId }) }}">{{ clientlyState.stateId }}</a></td>
                <td>{{ clientlyState.stateName }}</td>
                <td>{{ clientlyState.stateSlug }}</td>
                <td>{{ clientlyState.stateMinislug }}</td>
                <td>{{ clientlyState.stateTSynced }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('clientlystate_show', { 'id': clientlyState.stateId }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('clientlystate_edit', { 'id': clientlyState.stateId }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('clientlystate_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
