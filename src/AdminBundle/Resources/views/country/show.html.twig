{% extends 'base.html.twig' %}

{% block body %}
    <h1>Country</h1>

    <table>
        <tbody>
            <tr>
                <th>Geonameid</th>
                <td>{{ country.geonameId }}</td>
            </tr>
            <tr>
                <th>Iso</th>
                <td>{{ country.iso }}</td>
            </tr>
            <tr>
                <th>Iso3</th>
                <td>{{ country.iso3 }}</td>
            </tr>
            <tr>
                <th>Isonumeric</th>
                <td>{{ country.isoNumeric }}</td>
            </tr>
            <tr>
                <th>Fips</th>
                <td>{{ country.fips }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Capital</th>
                <td>{{ country.capital }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ country.area }}</td>
            </tr>
            <tr>
                <th>Population</th>
                <td>{{ country.population }}</td>
            </tr>
            <tr>
                <th>Continent</th>
                <td>{{ country.continent }}</td>
            </tr>
            <tr>
                <th>Tld</th>
                <td>{{ country.tld }}</td>
            </tr>
            <tr>
                <th>Currencycode</th>
                <td>{{ country.currencyCode }}</td>
            </tr>
            <tr>
                <th>Currencyname</th>
                <td>{{ country.currencyName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ country.phone }}</td>
            </tr>
            <tr>
                <th>Postalcodeformat</th>
                <td>{{ country.postalCodeFormat }}</td>
            </tr>
            <tr>
                <th>Postalcoderegex</th>
                <td>{{ country.postalCodeRegex }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>{{ country.languages }}</td>
            </tr>
            <tr>
                <th>Neighbours</th>
                <td>{{ country.neighbours }}</td>
            </tr>
            <tr>
                <th>Equivalentfipscode</th>
                <td>{{ country.equivalentFipsCode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('country_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('country_edit', { 'id': country.geonameId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
