{% extends 'base.html.twig' %}

{% block body %}
    <h1>Confirm</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ confirm.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ confirm.userId }}</td>
            </tr>
            <tr>
                <th>Key</th>
                <td>{{ confirm.key }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ confirm.type }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{{ confirm.extra }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ confirm.createdAt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('confirm_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('confirm_edit', { 'id': confirm.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
