{% extends 'base.html.twig' %}

{% block body %}
    <h1>Note list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ownerid</th>
                <th>Description</th>
                <th>Clientid</th>
                <th>Dealid</th>
                <th>Status</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('note_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note.ownerId }}</td>
                <td>{{ note.description }}</td>
                <td>{{ note.clientId }}</td>
                <td>{{ note.dealId }}</td>
                <td>{{ note.status }}</td>
                <td>{{ note.createdAt }}</td>
                <td>{{ note.updatedAt }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('note_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('note_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('note_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
