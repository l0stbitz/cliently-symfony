{% extends 'base.html.twig' %}

{% block body %}
    <h1>Note</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Ownerid</th>
                <td>{{ note.ownerId }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ note.description }}</td>
            </tr>
            <tr>
                <th>Clientid</th>
                <td>{{ note.clientId }}</td>
            </tr>
            <tr>
                <th>Dealid</th>
                <td>{{ note.dealId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ note.status }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ note.createdAt }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ note.updatedAt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('note_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('note_edit', { 'id': note.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
