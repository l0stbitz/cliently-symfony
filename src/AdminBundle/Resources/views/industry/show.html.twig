{% extends 'base.html.twig' %}

{% block body %}
    <h1>Industry</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ industry.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ industry.name }}</td>
            </tr>
            <tr>
                <th>Parentid</th>
                <td>{{ industry.parentId }}</td>
            </tr>
            <tr>
                <th>Islast</th>
                <td>{{ industry.isLast }}</td>
            </tr>
            <tr>
                <th>Workflows</th>
                <td>{{ industry.workflows }}</td>
            </tr>
            <tr>
                <th>Isenabled</th>
                <td>{{ industry.isEnabled }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('industry_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('industry_edit', { 'id': industry.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
