{% extends 'base.html.twig' %}

{% block body %}
    <h1>Task</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Ownerid</th>
                <td>{{ task.ownerId }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Clientid</th>
                <td>{{ task.clientId }}</td>
            </tr>
            <tr>
                <th>Dealid</th>
                <td>{{ task.dealId }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ task.type }}</td>
            </tr>
            <tr>
                <th>Iscompleted</th>
                <td>{{ task.isCompleted }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ task.createdAt }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ task.updatedAt }}</td>
            </tr>
            <tr>
                <th>Dueat</th>
                <td>{{ task.dueAt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('task_edit', { 'id': task.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
