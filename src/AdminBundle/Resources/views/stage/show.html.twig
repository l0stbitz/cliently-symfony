{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stage.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ stage.position }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ stage.value }}</td>
            </tr>
            <tr>
                <th>Pipelineid</th>
                <td>{{ stage.pipelineId }}</td>
            </tr>
            <tr>
                <th>Ownerid</th>
                <td>{{ stage.ownerId }}</td>
            </tr>
            <tr>
                <th>Isenabled</th>
                <td>{{ stage.isEnabled }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ stage.createdAt }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ stage.updatedAt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('stage_edit', { 'id': stage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
