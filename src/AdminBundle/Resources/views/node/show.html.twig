{% extends 'base.html.twig' %}

{% block body %}
    <h1>Node</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ node.id }}</td>
            </tr>
            <tr>
                <th>Group</th>
                <td>{{ node.group }}</td>
            </tr>
            <tr>
                <th>Subgroup</th>
                <td>{{ node.subgroup }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ node.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ node.name }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{{ node.extra }}</td>
            </tr>
            <tr>
                <th>Parentid</th>
                <td>{{ node.parentId }}</td>
            </tr>
            <tr>
                <th>Islast</th>
                <td>{{ node.isLast }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ node.path }}</td>
            </tr>
            <tr>
                <th>Alphapath</th>
                <td>{{ node.alphapath }}</td>
            </tr>
            <tr>
                <th>Pathposition</th>
                <td>{{ node.pathPosition }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ node.level }}</td>
            </tr>
            <tr>
                <th>Isenabled</th>
                <td>{{ node.isEnabled }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('node_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('node_edit', { 'id': node.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
